@page
@model HomeModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to chatroom, @User.Identity.Name!</h1>
</div>

<form method="post">
    <div class="form-group">
        <table style="width: 100%;">
            <tr>
                <td style="width: 100%;">
                    <input asp-for="Message.Text" class="form-control" />
                </td>
                <td style="padding-left: 10px;">
                    <input type="submit" value="Send" class="btn btn-primary" />
                </td>
            </tr>
        </table>
    </div>
</form>

<table class="table">
    <thead></thead>
    <tbody>
        @foreach (var message in Model.Messages)
        {
            <tr>
                <td>
                    <label style="font-style: italic;">(@message.Date.ToString())</label> <label style="font-weight: bold;">@message.UserName</label>: @message.Text
                </td>
            </tr>
        }
    </tbody>
</table>