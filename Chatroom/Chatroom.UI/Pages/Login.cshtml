@page
@model Chatroom.UI.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<form method="post">
    <div class="text-center">
        <h1 class="display-4">Login</h1>

        <table class="horizontal-center">
            <tr>
                <td>
                    <label class="control-label">Username</label>
                </td>
                <td>
                    <input asp-for="User.UserName" class="form-control" />
                    <span asp-validation-for="User.UserName" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label class="control-label">Password</label>
                </td>
                <td>
                    <input asp-for="User.PasswordHash" class="form-control" type="password" />
                    <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="padding-top: 10px;">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </td>
            </tr>
            <tr>
                <td colspan="2" style="padding-top: 10px;">
                    <a href="/NewUser">New User</a>
                </td>
            </tr>
        </table>
    </div>
</form>
